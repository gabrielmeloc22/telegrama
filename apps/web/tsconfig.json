{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"],
			"@ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"postcss.config.js",
		"tailwind.config.ts",
		"relay.config.js"
	],
	"exclude": ["node_modules"]
}
