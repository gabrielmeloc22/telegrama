{
	"name": "server",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "pnpm generate:schema && tsc",
		"dev": "pnpm generate:schema && tsx watch --require dotenv/config  src/index.ts",
		"format": "pnpm biome format ./src --write",
		"lint": "pnpm biome lint ./src",
		"check": "pnpm biome check --apply ./src",
		"type-check": "tsc --noEmit",
		"generate:schema": "tsx ./scripts/generateSchema.ts && cp ./schema/schema.graphql ../web/data"
	},
	"license": "ISC",
	"dependencies": {
		"@entria/graphql-mongo-helpers": "^1.1.2",
