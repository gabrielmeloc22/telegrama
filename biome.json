{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": { "useSortedClasses": "warn" },
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			}
		},
		"ignore": ["node_modules", "next", "__generated__"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	}
}
